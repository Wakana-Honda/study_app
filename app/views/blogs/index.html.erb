<p id="notice"><%= notice %></p>

<%= link_to "グラフ", homes_path %>

<div class="toppage">
<div class="row">
<div class="col-md-4">

<%= form_with(model: @blog, local: true) do |form| %>

  <div class="cal-title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :title %>
  </div>

  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content %>
  </div>

    <div class="time">
    <div class="form-tag">開始時間</div>
    <%= form.datetime_select :start_time %>
    <div class="form-tag">終了時間</div>
    <%= form.datetime_select :end_time %>
  </div>

 <div class="submit">
    <%= form.submit %>
 </div>
<% end %>
</div>

<br>


<br>
<div class="col-md-8">
<%= month_calendar events: @blogs do |date, blogs| %>
  <%= date.day %>

  <% blogs.each do |blog| %>
    <div>
      <%= link_to blog.title, blog %>
    </div>
  <% end %>
<% end %>
</div>
</div>
</div>


